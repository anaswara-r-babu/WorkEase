  <style>
    /* General Section Styling */
    .section {
      padding: 40px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 20px auto;
    }

    .section-title {
      font-size: 28px;
      font-weight: bold;
      color: #34495e;
      margin-bottom: 20px;
    }

    /* Form Styling */
    .category-form {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
      font-size: 16px;
      font-weight: bold;
      color: #34495e;
    }

    .form-control {
      width: 100%;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 14px;
      color: #34495e;
    }

    .form-control:focus {
      border-color: #1abc9c;
      box-shadow: 0 0 5px rgba(26, 188, 156, 0.5);
    }

    /* Button Styling */
    .btn-submit {
      display: inline-block;
      background-color: #1abc9c;
      color: #fff;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 20px;
    }

    .btn-submit:hover {
      background-color: #16a085;
    }

    /* Table Styling */
    .category-table {
      width: 100%;
      margin-top: 30px;
      background-color: #fff;
      border-collapse: collapse;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .category-table th,
    .category-table td {
      padding: 12px 20px;
      text-align: left;
      font-size: 14px;
      color: #34495e;
    }

    .category-table th {
      background-color: #2c3e50;
      color: #fff;
    }

    .category-table tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .category-table tr:hover {
      background-color: #ecf0f1;
    }

  </style>

</head>

<body>

    <%- include('header') %>
    <%- include('sidebar') %>

  <main id="main" class="main">



    <section class="section">
      <h1 class="section-title">Add Job Category</h1>
    
      <form action="/admin/addCategoryProcess" method="POST" class="category-form">
        <div class="mb-3">
          <label for="jobName" class="form-label">Job Category Name</label>
          <input type="text" class="form-control" id="jobName" name="jobName" required>
        </div>
        <button type="submit" class="btn btn-primary btn-submit">Add Category</button>
      </form>
    
      <table class="table category-table mt-4">
        <thead>
          <tr>
            <th scope="col">Available Job Category</th>
          </tr>
        </thead>
        <tbody>
          <% if (jobCategories && jobCategories.length > 0) { %>
            <% jobCategories.forEach(category => { %>
              <tr>
                <td><%= category.jobName %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="1">No categories found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
    

  </main><!-- End #main -->

