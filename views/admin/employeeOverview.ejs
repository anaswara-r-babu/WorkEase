  <!-- DataTables JS -->
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">
</head>

<body>

    <%- include('header') %>
    <%- include('sidebar') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Blank Page</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Pages</li>
          <li class="breadcrumb-item active">Blank</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <div class="container my-4">
      <h2 class="text-center mb-4">User Overview</h2>
      
      <!-- Overview Section -->
      <section class="section dashboard">
        <div class="row">
          <!-- Users Card -->
          <div class="col-lg-3 col-md-6">
            <div class="card custom-info-card">
              <div class="card-body ">
                <h5 class="card-title">Total Employees</h5>
                <div class="d-flex align-items-center">
                  <div class="ps-5">
                    <h6><%= totalemployees %></h6>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-3 col-md-6">
            <div class="card custom-info-card">
              <div class="card-body ">
                <h5 class="card-title">Booked Employees</h5>
                <div class="d-flex align-items-center">
                  <div class="ps-5">
                    <h6><%= bookedEmployees %></h6>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-3 col-md-6">
            <div class="card custom-info-card">
              <div class="card-body ">
                <h5 class="card-title">Available Employees</h5>
                <div class="d-flex align-items-center">
                  <div class="ps-5">
                    <h6><%= availableEmployees %></h6>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>
    
      <!-- List of users -->
      <h4 class="mt-5">Employees List</h4>
      <table id="emptable" class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col" aria-label="User ID">ID</th>
            <th scope="col" aria-label="User Name">Name</th>
            <th scope="col" aria-label="User Email">Email</th>
            <th scope="col" aria-label="Account Creation Date">Created At</th>
            <th scope="col" aria-label="Availability">Availability</th>
          </tr>
        </thead>
        <tbody>
          <% if (employees.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center text-muted">No employees available</td>
            </tr>
          <% } else { %>
            <% employees.forEach(employee => { %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= new Date(employee.createdAt).toLocaleDateString('en-US', { dateStyle: 'medium' }) %></td>
                <td>
                  <% if (!employee.isBooked) { %>
                    <span class="badge bg-success">Available</span>
                  <% } else { %>
                    <span class="badge bg-danger">Not Available</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
      
      
  </div>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
