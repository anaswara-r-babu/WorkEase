                    <div class="col-12">
                        <label for="jobTitle">Job Title:</label>
                        <select id="jobTitle" name="jobTitle"  class="form-control" required>
                          <option value="" disabled selected>Select your job title</option>
                            <% jobCategories.forEach(category => { %>
