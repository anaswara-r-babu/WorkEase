  <script>
    document.addEventListener("DOMContentLoaded", (event) => {
    const placeSelect = document.getElementById('place');
    const subplaceSelect = document.getElementById('curlocation');

    placeSelect.addEventListener('change', async (event) => {
        const placeId = event.target.value;

        // Clear existing subplace options
        // subplaceSelect.innerHTML = '<option value="" disabled selected>Select a subplace</option>';

        if (placeId) {
            try {
                // Fetch subplaces from the backend
                const response = await fetch(`/employee/selectplace/${placeId}`);
                if (!response.ok) throw new Error("Failed to fetch subplaces");

                const subplaces = await response.json();

                // Populate the subplace dropdown
                subplaces.forEach(subplace => {
                    const option = document.createElement('option');
                    option.value = subplace.id;
                    option.textContent = subplace.name;
                    subplaceSelect.appendChild(option);
                });
            } catch (error) {
                console.error("Error fetching subplaces:", error);
            }
        }
    });
});
  </script>

