  <div class="container my-4">
    <h2 class="text-center mb-4">Booking Requests</h2>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <div class="profile-photo me-3">
                  <img
                    src="<%= booking.user.photoUrl || '/assets/img/png-transparent-user-profile.png' %>"
                    alt="User Photo"
                    class="rounded-circle"
                    width="50"
                    height="50">
                </div>
                <div>
                  <p class="mb-1">
                    <strong>Requested by:</strong> <%= booking.user.name %>
                  </p>
                  <p class="mb-1">
                    <strong>Place:</strong> <%= booking.user.place %>
                  </p>
                  <p class="mb-0">
                    <strong>Map Link:</strong>
                    <a href="https://www.google.com/maps?q=<%= booking.user.place %>" target="_blank">
                      View on map
                    </a>
                  </p>
                </div>
              </div>
              <p><strong>Description:</strong> <%= booking.description || 'No description provided' %></p>
              <p>
                <strong>Status:</strong>
                <span
                  class="badge 
                  <%= booking.status === 'pending' ? 'bg-warning text-dark' : 
                       booking.status === 'accepted' ? 'bg-success text-white' : 
                       booking.status === 'rejected' ? 'bg-danger text-white' : 
                       booking.status === 'completed' ? 'bg-primary text-white' : 
                       booking.status === 'withdrawn' ? 'bg-secondary text-white' : '' %>">
                  <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                </span>
              </p>
              <% if (booking.status === 'pending') { %>
                <div class="d-flex justify-content-between">
                  <button
                    class="btn btn-success w-45 accept-btn"
                    data-booking-id="<%= booking.id %>">
                    Accept
                  </button>
                  <button
                    class="btn btn-danger w-45 reject-btn"
                    data-booking-id="<%= booking.id %>">
                    Reject
                  </button>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  

