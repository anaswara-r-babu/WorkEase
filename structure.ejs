<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/styleindex.css">
</head>
<body>
      <section class="bg-light text-light p-5">
        <div class="container">
            <h6 style="color: black;">search here</h6>
          <div class="d-flex justify-content-between align-items-center input-group news-input">
            <form action="/landing" method="post" class="d-flex align-items-center">
              <!-- <select name="place" required style="width: 300px; margin-right: 10px;">
                <option value="" disabled selected>Select the place</option>
              </select> -->
              <select name="place" id="place">
                <option value="">Select a Place</option>
                <% if (places && places.length > 0) { %>
                    <% places.forEach(place => { %>
                        <option value="<%= place %>"><%= place %></option>
                    <% }); %>
                <% } else { %>
                    <option value="">No places available</option>
                <% } %>
              </select>          
            
      
              <select id="jobTitle" name="jobTitle" required>
                <option value="" disabled selected>Select your job title</option>
                  <% jobCategories.forEach(category => { %>
                  <option value="<%= category.id %>"><%= category.jobName %></option>
                <% }); %>
              </select> 
      
              <button class="btn btn-dark btn-sm" type="submit">Search</button>
            </form>

            <form action="/landing" method="POST">
                                <!-- Display matching employees -->
                                <!-- Add this section below the search form -->
                <section class="container mt-4">
                
                    <% if (employees && employees.length > 0) { %>
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Job Title</th>
                            <th>Contact</th>
                            <th>Place</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% employees.forEach(employee => { %>
                            <tr>
                            <td><%= employee.name %></td>
                            <td><%= employee.jobCategory.jobName %></td>
                            <td><%= employee.contact %></td>
                            <td><%= employee.place %></td>
                            <td>
                                <a href="/employee/profile/<%= employee.id %>" class="btn btn-primary btn-sm">View Profile</a>
                                <a href="/booking/<%= employee.id %>" class="btn btn-success btn-sm">Book Now</a>
                            </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <p class="text-center">No employees found.</p>
                    <% } %>
                </section>
            </form>
          </div>
        </div>
      </section>
</body>
</html>